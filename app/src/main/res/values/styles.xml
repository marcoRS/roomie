<resources>

    <!-- Base application theme. -->
    <style name="BaseRoomieTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your base theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <!-- Declares the theme name that's actually applied in the manifest file -->
    <style name="RoomieTheme" parent="BaseRoomieTheme" />

    <style name="RoomieTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RoomieTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="RoomieTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Display2</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">@font/unica_one_regular</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
</resources>
